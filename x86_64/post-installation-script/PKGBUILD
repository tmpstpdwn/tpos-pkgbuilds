# Maintainer: Tmpstpdwn <tmpstpdwn@tuta.io>
pkgname=post-installation-script
_pkgver=1.0
pkgver=1.0.r17.45ffd2c
pkgrel=1
pkgdesc="A simple post installation script."
arch=('x86_64')
url="https://github.com/tmpstpdwn/post-installation-script.git"
license=('GPL3')
depends=('binutils' 'bash' 'util-linux')
makedepends=('git')
provides=('post-installation-script')
source=("git+$url")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  printf "${_pkgver}.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  mkdir -p "${pkgdir}"/usr/bin
  cd "$srcdir/$pkgname"
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  install -Dm644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"
  install -Dm755 src/* "${pkgdir}"/usr/bin/
}
